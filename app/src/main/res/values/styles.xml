<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"> <!-- 要使用 Material, 就必須繼承這個 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- 改變 Tool Bar 顏色，讓它與背景顏色一致 -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="ProfileButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">#00000000</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TextColorStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!--<style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>-->


</resources>
