<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#B6B4B4" /> //邊框線顏色
            <corners android:radius="2dp" /> //圓角度數
            <solid android:color="#ffffff" > //背景顏色
            </solid>
            <padding
                android:right="5dp"
                android:bottom="5dp"
                android:top="5dp" /> //邊距
            <size
                android:width="140dp"
                />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/arrow_down"
            android:antialias="true" />
    </item>
</layer-list>